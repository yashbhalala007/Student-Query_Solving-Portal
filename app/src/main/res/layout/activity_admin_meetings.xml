<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMeetings"
    android:background="@color/postBackground">

    <include
        android:id="@+id/admin_meetings_toolbar"
        layout="@layout/appbar_layout">
    </include>

    <EditText
        android:id="@+id/admin_meetings_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="10sp"
        android:hint="Search user here"
        android:background="@drawable/input"
        android:layout_margin="10dp"
        android:layout_below="@id/admin_meetings_toolbar"/>

    <FrameLayout
        android:id="@+id/admin_meetings_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/admin_photos_toolbar"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="115dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/admin_meetings_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>